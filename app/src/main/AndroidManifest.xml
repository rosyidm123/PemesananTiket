<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abuabu.pemesanantiket">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Themes.PemesananTiket"
        android:usesCleartextTraffic="true"
        tools:targetApi="s">
        <activity
            android:name=".view.history.HistoryActivity"
            android:exported="true" />
        <activity
            android:name=".view.input.DataPesawatActivity"
            android:theme="@style/Themes.PemesananTiket"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.input.DataKeretaActivity"
            android:theme="@style/Themes.PemesananTiket"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.input.DataKapalActivity"
            android:theme="@style/Themes.PemesananTiket"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.main.MainActivity"
            android:theme="@style/Themes.PemesananTiket"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>